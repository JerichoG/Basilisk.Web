@using Basilisk.ViewModel.Order
@model IndexOrderViewModel
@{
    ViewData["Title"] = "Order Index";

}

<form method="GET" asp-controller="Order" asp-action="Index">
    <div class="field-row">
        <label for="invNum">Invoice Number</label>
        <input type="text" name="searchInv" value="@Model.SearchInvNumber" />


    </div>
    <div class="field-row">

        <label for="cusName">Customer</label>
        <input type="text" name="searchCus" value="@Model.SearchCustomer" />

    </div>

    <button type="submit" class="btn">SEARCH</button>

</form>

<a class="btn" id="addBtn" asp-controller="Order" asp-action="Add">ADD</a>


<h1>Total data di table Order : @Model.TotalData  </h1>


<table>
    <thead>
        <tr>
            <th>Action</th>
            <th>Invoice Number</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
            <tr>
                <td>
                    <a class="btn btn-detail" asp-controller="Order" asp-action="Detail" asp-route-id="@item.InvoiceNumber"><i class="fa fa-info-circle"><span>Detail</span></i></a>
                </td>
                <td>@item.InvoiceNumber</td>
                <td>@item.CustomerName</td>
                <td>@item.OrderDate</td>
                <td>@item.TotalPrice</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="10">
                <div>
                    @for (int i = 1; i <= Model.TotalHalaman; i++)
                    {

                        <a class="btn" asp-action="Index" asp-route-page="@i"
                       asp-route-searchName="">@i</a>

                    }
                </div>

            </td>

        </tr>
    </tfoot>
</table>