<div class="popup-dialog delete-modal">
    <header style="color:white">
        <h1>Delete Category</h1>
        <a href="javascript:;" class="close-button">
            <i class="fa fa-close"></i>
        </a>
    </header>
    <div style="color:white">
        <p>Are you sure, do you want to delete this category(<span class="categoryName"></span>)?</p>
        <a href="javascript:;" class="blue-button btn submit-delete">Delete</a>
        <a class="btn btn-edit">Cancel</a>
    </div>
</div>


<script>
    $(".btn-delete-dialog").click(function (event) {
        event.preventDefault();

        let categoryName = this.dataset.category;

        $(`.delete-modal .categoryName`).text(categoryName);

        $(".modal-layer").css("display", "flex");
        $(".delete-modal").css("display", "block");
    })

</script>